<Window x:Class="CounterWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Counter" Height="200" Width="200"
        WindowStyle="None" AllowsTransparency="True" 
        Background="Transparent" ShowInTaskbar="True"
        Topmost="True" MouseDown="Window_MouseDown" WindowStartupLocation="CenterScreen">

    <Border Background="#AA121212" CornerRadius="100" 
            BorderBrush="#44FFFFFF" BorderThickness="2">
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="CounterDisplay" Text="0" 
                       Foreground="White" FontSize="50" 
                       FontWeight="Bold" HorizontalAlignment="Center"/>
            
            <Button Content="ADD +1" Width="80" Height="35"
                    Click="Increment_Click" Cursor="Hand"
                    Background="#0078D4" Foreground="White"
                    BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="17"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
        
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Reset" Click="Reset_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </ContextMenu>
        </Border.ContextMenu>
    </Border>
</Window>