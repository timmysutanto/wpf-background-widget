<Window x:Class="CounterWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Counter" 
        SizeToContent="WidthAndHeight" 
        WindowStyle="None" AllowsTransparency="True" 
        Background="Transparent" ShowInTaskbar="True"
        Topmost="True" MouseDown="Window_MouseDown" WindowStartupLocation="CenterScreen">

    <Border Background="#AA121212" CornerRadius="10" 
            BorderBrush="#44FFFFFF" BorderThickness="2" Padding="10">
        
        <Grid x:Name="FormLayoutGrid"> 
            <Grid.ColumnDefinitions> 
                <ColumnDefinition Width="Auto" /> 
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions> 
       
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" /> 
                <RowDefinition Height="Auto" /> 
                <RowDefinition Height="Auto" /> 
                <RowDefinition Height="Auto" /> 
            </Grid.RowDefinitions> 
            
            <Canvas Name="Dealer1Canvas" Grid.Row="0" Grid.Column="0" Height="210" Width="150" Background="White" Margin="10"/>
            <Canvas Grid.Row="0" Grid.Column="1" Height="210" Width="150" Background="White" Margin="10"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="DealerCounterDisplay" 
                       Text="0" Foreground="White" FontSize="50" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10"/>
            
            <Button Grid.Row="2" Grid.Column="0" Height="30" Width="90" BorderThickness="4" Click="Load_Card">Hit</Button>
            <Button Grid.Row="2" Grid.Column="1" Height="30" Width="90" BorderThickness="4">Pass</Button>

            
            <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" x:Name="PlayerCounterDisplay" 
                       Text="0" Foreground="White" FontSize="50" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10"/>
            
            <Canvas Grid.Row="4" Grid.Column="0" Height="210" Width="150" Background="White" Margin="10"/>
            <Canvas Grid.Row="4" Grid.Column="1" Height="210" Width="150" Background="White" Margin="10"/>
       
        </Grid> 
        
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </ContextMenu>
        </Border.ContextMenu>
    </Border>
</Window>