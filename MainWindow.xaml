<Window x:Class="wpf_background_widget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Counter" 
        SizeToContent="WidthAndHeight" 
        WindowStyle="None" AllowsTransparency="True" 
        Background="Transparent" ShowInTaskbar="True"
        Topmost="True" MouseDown="Window_MouseDown" WindowStartupLocation="CenterScreen">

    <Border Background="#AA121212" CornerRadius="10" 
            BorderBrush="#44FFFFFF" BorderThickness="2" Padding="10">
        
        <Grid x:Name="FormLayoutGrid"> 
            <Grid.ColumnDefinitions> 
                <ColumnDefinition Width="Auto" /> 
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions> 
       
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" /> 
                <RowDefinition Height="Auto" /> 
                <RowDefinition Height="Auto" /> 
                <RowDefinition Height="Auto" /> 
            </Grid.RowDefinitions> 
            
            <Canvas Name="DealerCanvas1" Grid.Row="0" Grid.Column="0" Height="210" Width="150" Background="White" Margin="10"/>
            <Canvas Name="DealerCanvas2" Grid.Row="0" Grid.Column="1" Height="210" Width="150" Background="White" Margin="10"/>

            <TextBlock Name="DealerCounter" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"  
                       Text="0" Foreground="White" FontSize="50" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10"/>
            
            <StackPanel Name="ButtonStackPanel" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Height="30" Width="90" Margin="5,0,5,0" BorderThickness="4" Click="Init_Dealer_And_Player_Card">Start</Button>
                <Button Height="30" Width="90" Margin="5,0,5,0" BorderThickness="4" Click="Hit_Player_Card">Pass</Button>
                <Button Height="30" Width="90" Margin="5,0,5,0" BorderThickness="4" Click="Hit_Player_Card">Reset</Button>
            </StackPanel>
            
            <TextBlock Name="PlayerCounter" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                       Text="0" Foreground="White" FontSize="50" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10"/>
            
            <Canvas Name="PlayerCanvas1" Grid.Row="4" Grid.Column="0" Height="210" Width="150" Background="White" Margin="10"/>
            <Canvas Name="PlayerCanvas2" Grid.Row="4" Grid.Column="1" Height="210" Width="150" Background="White" Margin="10"/>
       
        </Grid> 
        
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </ContextMenu>
        </Border.ContextMenu>
    </Border>
</Window>
